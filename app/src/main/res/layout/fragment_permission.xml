<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/header_permission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:paddingTop="8dp"
                android:gravity="start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/title_permission"
                android:textColor="#1E252B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="21sp"
                android:layout_height="48dp"
                android:lineSpacingExtra="28.6dp"
                android:text="Permission"/>
            <TextView
                android:layout_width="22dp"
                android:text="Go"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#7879F1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="48dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="214dp"
            android:layout_height="170.24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/banner_perssion"
            android:id="@+id/image_permission"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#4F4F4F"
            android:layout_marginTop="6.76dp"
            android:id="@+id/description_perssion"
            android:text="App Name requires permission to use the {deviceâ€™s camera and folder}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Storage"
                android:layout_height="32dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="56dp"
                android:layout_height="28dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Storage"
                android:layout_height="32dp" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="56dp"
                android:layout_height="28dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Storage"
                android:layout_height="32dp" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="56dp"
                android:layout_height="28dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>
    </LinearLayout>
</layout>